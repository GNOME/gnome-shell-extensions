{
    "rules": {
        "camelcase": [
            "error",
            {
                "properties": "never",
                "allow": ["^vfunc_", "^on_"]
            }
        ],
        "no-unused-vars": [
            "error",
            {
                "argsIgnorePattern": "^_",
                "varsIgnorePattern": "_$"
            }
        ],
        "object-curly-spacing": [
            "error",
            "always"
        ],
        "prefer-arrow-callback": "error"
    },
    "globals": {
        "global": false
    }
}
