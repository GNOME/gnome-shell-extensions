{
    "rules": {
        "arrow-spacing": "error",
        "brace-style": [
            "error",
            "1tbs",
            {
                "allowSingleLine": true
            }
        ],
        "camelcase": [
            "error",
            {
                "properties": "never",
                "allow": ["^vfunc_"]
            }
        ],
        "indent": [
            "error",
            4,
            {
                "ignoredNodes": [
                    "ArrayExpression > ObjectExpression",
                    "ConditionalExpression"
                ],
                "MemberExpression": "off"
            }
        ],
        "key-spacing": [
            "error",
            {
                "mode": "minimum",
                "beforeColon": false,
                "afterColon": true
            }
        ],
        "object-curly-spacing": [
            "error",
            "always"
        ],
        "prefer-arrow-callback": "error"
    },
    "globals": {
        "global": false,
        "_": false,
        "C_": false,
        "N_": false,
        "ngettext": false
    }
}
